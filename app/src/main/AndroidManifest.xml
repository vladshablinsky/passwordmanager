<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.vladshablinsky.passwordmanager" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
            android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".ListActivity"
            android:label="@string/title_activity_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.vladshablinsky.passwordmanager.MainActivity" />
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".AddSheetActivity"
            android:label="@string/title_activity_add_sheet" >
        </activity>
        <activity
            android:name=".AddEntryActivity"
            android:label="@string/title_activity_add_entry" >
        </activity>
        <activity
            android:name=".EditEntryActivity"
            android:label="@string/title_activity_edit_entry" >
        </activity>
    </application>

</manifest>
