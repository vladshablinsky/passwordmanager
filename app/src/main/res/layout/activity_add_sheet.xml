<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="io.vladshablinsky.passwordmanager.AddSheetActivity"
    android:id="@+id/addSheet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sheet name"
        android:id="@+id/textSheetName"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editSheetName"
        android:layout_alignStart="@+id/editSheetName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editSheetName"
        android:layout_below="@+id/textSheetName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sheet description"
        android:id="@+id/textSheetDescription"
        android:layout_below="@+id/editSheetName"
        android:layout_alignLeft="@+id/editSheetName"
        android:layout_alignStart="@+id/editSheetName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editSheetDescription"
        android:layout_below="@+id/textSheetDescription"
        android:layout_alignLeft="@+id/textSheetDescription"
        android:layout_alignStart="@+id/textSheetDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Master password"
        android:id="@+id/textPass"
        android:layout_below="@+id/editSheetDescription"
        android:layout_alignLeft="@+id/editSheetDescription"
        android:layout_alignStart="@+id/editSheetDescription" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPass"
        android:layout_below="@+id/textPass"
        android:layout_alignLeft="@+id/textPass"
        android:layout_alignStart="@+id/textPass" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Repeat master password"
        android:id="@+id/textPassV"
        android:layout_below="@+id/editPass"
        android:layout_alignLeft="@+id/editPass"
        android:layout_alignStart="@+id/editPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPassV"
        android:layout_below="@+id/textPassV"
        android:layout_alignLeft="@+id/textPassV"
        android:layout_alignStart="@+id/textPassV" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new sheet"
        android:id="@+id/buttonCreateSheet"
        android:layout_below="@+id/editPassV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />
</RelativeLayout>
